
public class ShoppingCart {

	private int itemCount;
	private int capacity;
	private double totalPrice;
	private int quantity;
	private Item[] cart;
	private String itemName;
	
	
	public ShoppingCart() {
		itemName = null;
		capacity = 100;
		cart = new Item[capacity];
		itemCount = 0;
		totalPrice = 0.0;
		quantity = 0;

	}
	//?
	public void AddToCart(String itemName, String itemNumber, double price, int quantity) {
		Item temp = new Item(itemName, itemNumber, price, quantity);
		totalPrice += (price * quantity);
		itemCount += quantity;
		cart [itemCount] = temp;
	}
	
	
	@Override
		public String toString() {
		String cartContent = "\nNumber of Items in Cart: " + itemCount
				+ "\nTotal Price: " + totalPrice
				+ "\nItems: ";
			for(int i = 0; i<= itemCount; i++) {
					System.out.println(); 
				}
		return cartContent;
	}
}
